
const express = require('express');
const router = express.Router();
const postCtrl = require('../controllers/postCtrl');

const auth = require('../middleware/auth')

router.post('/posts', auth, postCtrl.createPost);
router.get('/posts', postCtrl.getHomePosts);


router.get('/posts/category/:slug', postCtrl.getPostsByCategory);


router.get('/posts/scroll', postCtrl.getPostsScroll);

router.get('/posts/search', postCtrl.searchPosts);


module.exports = router;